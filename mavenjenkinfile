              script
              {
                  File sourceFolder = new File("/home/administrator/Rajesh/jenkins_home/workspace/maven-pipeline1");
                  File  destinationFolder = new File("/var/Applicaitons/");
                  File[] listOfFiles = sourceFolder.listFiles();
                  echo "Files Total: " + listOfFiles.length;

                  for (File file : listOfFiles)
                  {
                      if (file.isFile())
